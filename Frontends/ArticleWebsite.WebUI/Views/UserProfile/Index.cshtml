@using ArticleWebsite.Dto.AppUserDtos
@model GetAppUserWithAllDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/ProfileUILayout/Index.cshtml";
}


<div class="container mt-4">
    <div class="card mx-auto" style="max-width: 600px;">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">Profil Sayfası</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Ad</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Soyad</dt>
                <dd class="col-sm-8">@Model.Surname</dd>
                
                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Bölüm</dt>
                <dd class="col-sm-8">@Model.DepartmentName</dd>

                <dt class="col-sm-4">Rol</dt>
                <dd class="col-sm-8">@Model.AppRoleName</dd>
            </dl>
        </div>
    </div>
</div>

