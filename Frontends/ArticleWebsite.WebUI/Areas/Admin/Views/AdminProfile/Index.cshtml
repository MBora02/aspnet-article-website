@model GetAppUserWithAllDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="card mx-auto" style="max-width: 800px; margin-top: 0.25rem;">
    <div class="card-header bg-secondary text-white">
        <h4 class="mb-0">Admin Bilgi Önizlemesi (Form Şeklinde)</h4>
    </div>
    <div class="card-body">
        <form>
            <div class="form-group mb-4">
                <label class="font-weight-bold h5">Ad</label>
                <p class="form-control-plaintext h5" style="margin-top: 0.25rem;">@Model.Name</p>
            </div>
            <div class="form-group mb-4">
                <label class="font-weight-bold h5">Soyad</label>
                <p class="form-control-plaintext h5">@Model.Surname</p>
            </div>
            <div class="form-group mb-4">
                <label class="font-weight-bold h5">Email</label>
                <p class="form-control-plaintext h5">@Model.Email</p>
            </div>
            <div class="form-group mb-4">
                <label class="font-weight-bold h5">Bölüm</label>
                <p class="form-control-plaintext h5">@Model.DepartmentName</p>
            </div>
            <div class="form-group mb-2">
                <label class="font-weight-bold h5">Rol</label>
                <p class="form-control-plaintext h5">@Model.AppRoleName</p>
            </div>
        </form>
    </div>
</div>



