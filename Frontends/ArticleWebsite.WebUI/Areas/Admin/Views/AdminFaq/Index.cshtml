@model List<ResultFaqDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sık Sorulan Sorular Listesi</h4>
                        <a href="/Admin/AdminFaq/CreateFaq/" class="btn btn-outline-primary">Yeni Sık Sorulan Sorular Girişi</a>

                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Soru</th>
                                        <th>Cevap</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Question</td>
                                            <td>@item.Answer</td>
                                            <td><a href="/Admin/AdminFaq/RemoveFaq/@item.FaqId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminFaq/UpdateFaq/@item.FaqId" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->

        </div>
        <!-- end page title -->

    </div> <!-- container-fluid -->
</div>