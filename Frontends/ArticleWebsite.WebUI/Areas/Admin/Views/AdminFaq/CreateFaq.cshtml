@model CreateFaqDto
@{
    ViewData["Title"] = "CreateFaq";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Soru Girişi</h4>
                        <form asp-area="Admin" asp-controller="AdminFaq" asp-action="CreateFaq" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="exampleInputName">Soru</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Question" placeholder="Soru Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Cevap</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Answer" placeholder="Cevap Girişi Yapınız">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Soruyu Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
